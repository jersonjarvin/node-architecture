{
  "name": "node-architecture",
  "version": "1.0.0",
  "description": "Base Architecture for projects in Node JS based in Clean Architecture and DDD (Domain Driven Desing)",
  "author": "Jerson Romero Diaz",
  "main": "dist/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "cross-env NODE_ENV=development && ts-node-dev -r tsconfig-paths/register src/server.ts",
    "start": "cross-env NODE_ENV=production npm run build && node ./dist/server.js",
    "build": "npm run build:compile && npm run build:assets",
    "build:compile": "npm run clean && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json --silent",
    "build:assets": "copyfiles -u 1 src/**/*.yml dist/ && copyfiles -f package*.json dist/ && copyfiles -f swagger.yaml dist/",
    "check:format": "prettier --check .",
    "check:lint": "eslint . --ext .js,.ts --color",
    "fix:format": "prettier --check --write --ignore-unknown .",
    "fix:lint": "npm run check:lint && eslint ./src/**/*.ts --fix",
    "clean": "rimraf ./dist",
    "upgrade": "npm update --save-dev && npm update --save"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jersonjarvin/node-architecture.git"
  },
  "keywords": [
    "node",
    "typescript",
    "eslint",
    "prettier"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jersonjarvin/node-architecture/issues"
  },
  "homepage": "https://github.com/jersonjarvin/node-architecture#readme",
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/figlet": "^1.5.4",
    "@types/morgan": "^1.9.3",
    "@types/mssql": "^7.1.5",
    "@types/node": "^17.0.23",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.12.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "2.6.2",
    "ts-node-dev": "^1.1.8",
    "tsc-alias": "^1.6.6",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@types/node-emoji": "^1.8.1",
    "awilix": "^7.0.1",
    "body-parser": "^1.19.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "figlet": "^1.5.2",
    "helmet": "^5.0.2",
    "http-graceful-shutdown": "^3.1.7",
    "http-status-codes": "^2.2.0",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.4.3",
    "morgan": "^1.10.0",
    "mssql": "^8.1.0",
    "multer": "^1.4.4",
    "node-emoji": "^1.11.0",
    "npm": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "swagger-ui-express": "^4.3.0",
    "ts-dedent": "^2.2.0",
    "ts-node": "^10.7.0",
    "winston": "^3.6.0",
    "winston-daily-rotate-file": "^4.6.1",
    "yamljs": "^0.3.0"
  }
}
